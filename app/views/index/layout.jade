    script.
      var isShow = false;
      $(document).ready(function() {
      $('body').scrollspy({
      target: '.navbar-fixed-top',
      offset: 80
      });
      // Page scrolling feature
      $('a.page-scroll').bind('click', function(event) {
      var link = $(this);
      $('html, body').stop().animate({
      scrollTop: $(link.attr('href')).offset().top - 50
      }, 500);
      event.preventDefault();
      $("#navbar").collapse('hide');
      });
      });
      var cbpAnimatedHeader = (function() {
      var docElem = document.documentElement,
      header = document.querySelector('.navbar-default'),
      didScroll = false,
      changeHeaderOn = 200;
      function init() {
      window.addEventListener('scroll', function(event) {
      if (!didScroll) {
      didScroll = true;
      setTimeout(scrollPage, 250);
      }
      }, false);
      }
      function scrollPage() {
      var sy = scrollY();
      if (sy >= changeHeaderOn) {
      $(header).addClass('navbar-scroll');
      $(header).addClass('scroll-flag');
      } else if(!isShow){
      $(header).removeClass('navbar-scroll');
      }else{
      $(header).removeClass('scroll-flag');
      }
      didScroll = false;
      }
      function scrollY() {
      return window.pageYOffset || docElem.scrollTop;
      }
      init();
      })();
      function changeColor(){
      var header = document.querySelector('.navbar-default');
      //isScroll：标志位，页面在顶部时为false
      var isScroll = $(header).hasClass('scroll-flag');
      //如果下拉列表未打开，则设置为白色底色，且将标志位置为true
      if(!isShow){
      $(header).addClass('navbar-scroll');
      isShow = true;
      }else{
      //如果下拉列表已打开，且页面位于顶部，则将导航栏重新设为透明背景
      //如果未位于顶部，则不需要操作
      if (!isScroll) {
      $(header).removeClass('navbar-scroll');
      }
      isShow = false;
      }
      }
      // Activate WOW.js plugin for animation on scrol
      new WOW().init();

